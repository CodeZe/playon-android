<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ga.chrom_web.player.multiplayer.ui.player.PlayerFragment">

    <data>

        <import type="android.view.View" />

        <import type="ga.chrom_web.player.multiplayer.Utils" />

        <variable
            name="isSmileKeyboardOpen"
            type="boolean" />

        <variable
            name="playerViewModel"
            type="ga.chrom_web.player.multiplayer.ui.player.PlayerViewModel" />

    </data>

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <FrameLayout
            android:id="@+id/youtubeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvChat"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#e0e0e0"
                app:layout_constraintBottom_toTopOf="@+id/imgSmiles"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imgSmiles"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="bottom"
                android:layout_weight="0.45"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/kappa"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/smilesKeyboard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#ffffff"
                android:visibility="@{isSmileKeyboardOpen ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toTopOf="@+id/imgSmiles"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>
</layout>

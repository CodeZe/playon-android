<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ga.chrom_web.player.multiplayer.ui.player.PlayerFragment">

    <data>

        <import type="android.view.View" />

        <import type="ga.chrom_web.player.multiplayer.Utils" />

        <variable
            name="playerViewModel"
            type="ga.chrom_web.player.multiplayer.ui.player.PlayerViewModel" />

        <variable
            name="isSmileKeyboardOpen"
            type="boolean" />

    </data>

    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/youtubeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/containerSendMessage"
            android:layout_below="@+id/youtubeContainer"
            android:background="#e0e0e0"
            android:overScrollMode="never" />

        <LinearLayout
            android:id="@+id/containerSendMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/emotesContainer"
            android:background="#ffffff"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/imgSmiles"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:layout_weight="0.43"
                android:background="?attr/selectableItemBackground"
                android:paddingBottom="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:scaleType="fitCenter"
                android:src="@{isSmileKeyboardOpen ? @drawable/ic_keyboard : @drawable/kappa}" />

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.14"
                android:background="@null"
                android:hint="@string/enter_message_hint"
                android:maxLines="2"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@={playerViewModel.messageField}"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="0.43"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{() -> playerViewModel.send()}"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:src="@drawable/ic_message" />
        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/emotesContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/emotesControls"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#d5d5d5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Switch
                    android:id="@+id/smilesKeyboardSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSmileHeader"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingEnd="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="12dp"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/smilesKeyboardSwitch"
                    app:layout_constraintLeft_toRightOf="@+id/smilesKeyboardSwitch"
                    app:layout_constraintRight_toLeftOf="@+id/eraseSmile"
                    app:layout_constraintTop_toTopOf="@+id/smilesKeyboardSwitch" />

                <ImageView
                    android:id="@+id/eraseSmile"
                    android:layout_width="48dp"
                    android:layout_height="0dp"
                    android:background="?attr/selectableItemBackground"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:src="@drawable/ic_erase"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tvSmileHeader"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/smilesKeyboard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#e0e0e0"
                android:overScrollMode="never"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emotesControls" />

        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>
</layout>

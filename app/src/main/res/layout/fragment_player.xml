<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ga.chrom_web.player.multiplayer.ui.player.PlayerFragment">

    <data>

        <import type="android.view.View" />

        <import type="ga.chrom_web.player.multiplayer.Utils" />

        <variable
            name="playerViewModel"
            type="ga.chrom_web.player.multiplayer.ui.player.PlayerViewModel" />

        <variable
            name="isSmileKeyboardOpen"
            type="boolean" />

    </data>

    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/youtubeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/containerSendMessage"
            android:layout_below="@+id/youtubeContainer"
            android:background="#e0e0e0" />

        <LinearLayout
            android:id="@+id/containerSendMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/smilesKeyboard"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/imgSmiles"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="bottom"
                android:paddingLeft="6dp"
                android:paddingStart="6dp"
                android:layout_weight="0.45"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                android:src="@{isSmileKeyboardOpen ? @android:drawable/ic_menu_sort_alphabetically : @drawable/kappa}" />

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:background="@null"
                android:hint="@string/enter_message_hint"
                android:maxLines="2"
                android:paddingLeft="8dp"
                android:paddingStart="8dp"
                android:text="@={playerViewModel.messageField}"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="0.42"
                android:background="#ffffff"
                android:onClick="@{() -> playerViewModel.send()}"
                android:src="@drawable/ic_message" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/smilesKeyboard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</layout>

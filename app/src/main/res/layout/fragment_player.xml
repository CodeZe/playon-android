<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ga.chrom_web.player.multiplayer.ui.player.PlayerFragment">

    <data>

        <import type="android.view.View" />

        <import type="ga.chrom_web.player.multiplayer.Utils" />

        <variable
            name="playerViewModel"
            type="ga.chrom_web.player.multiplayer.PlayerViewModel" />

        <variable
            name="duration"
            type="int" />

        <variable
            name="currentTime"
            type="int" />

    </data>

    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/youtubeWrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/youtubeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.constraint.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/containerControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/youtubeWrapper">

            <TextView
                android:id="@+id/tvCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@{Utils.formattedTime(currentTime) ?? @string/default_time}" />

            <SeekBar
                android:id="@+id/pbVideoProgress"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tvCurrentTime"
                android:layout_toLeftOf="@+id/tvDuration"
                android:layout_toRightOf="@+id/tvCurrentTime"
                android:layout_toStartOf="@+id/tvDuration"
                android:indeterminate="false"
                android:max="@{duration}"
                android:onStopTrackingTouch="@{() -> playerViewModel.rewindTo(pbVideoProgress.getProgress())}"
                android:progress="@{currentTime}" />

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@{Utils.formattedTime(duration) ?? @string/default_time}" />

        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/containerSendMessage"
            android:layout_below="@+id/containerControls" />

        <LinearLayout
            android:id="@+id/containerSendMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#dcd8d8"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:hint="Enter message"
                android:maxLines="2" />

            <Button
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="0.8"
                android:onClick="@{() -> playerViewModel.send(etMessage.getText().toString())}"
                android:text="Send" />
        </LinearLayout>

    </RelativeLayout>
</layout>
